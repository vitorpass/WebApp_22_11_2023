@model WebApp_22_11_2023.Models.InventarioModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<label>ID Cliente</label>
<select name="id_cliente" class="form-control">
    @foreach (var item in Model.clientes)
    {
        <option value="@item.id_cliente">@item.nome</option>
    }
</select>

<label>ID Maquina</label>
<select name="id_maquina" class="form-control">
    @foreach (var item in Model.maquinas)
    {
        <option value="@item.id_maquina">@item.nome_maquina</option>
    }
</select>

<label>Email</label>
<select name="email" class="form-control">
    @foreach (var item in Model.clientes)
    {
        <option value="@item.email">@item.email</option>
    }
</select>

<label>Telefone</label>
<select name="telefone" class="form-control">
    @foreach (var item in Model.clientes)
    {
        <option value="@item.telefone">@item.telefone</option>
    }
</select>

<label>Nome da Maquina</label>
<select name="nome_maquina" class="form-control">
    @foreach (var item in Model.maquinas)
    {
        <option value="@item.nome_maquina">@item.nome_maquina</option>
    }
</select>

<label>Tipo de Maquina</label>
<select name="tipo_maquina" class="form-control">
    @foreach (var item in Model.maquinas)
    {
        <option value="@item.tipo_maquina">@item.tipo_maquina</option>
    }
</select>

<label>Status da Maquina</label>
<select name="status_maquina" class="form-control">
    @foreach (var item in Model.maquinas)
    {
        <option value="@item.status_maquina">@item.status_maquina</option>
    }
</select>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_inventario" class="control-label"></label>
                <input asp-for="id_inventario" class="form-control" />
                <span asp-validation-for="id_inventario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_cliente" class="control-label"></label>
                <input asp-for="id_cliente" class="form-control" />
                <span asp-validation-for="id_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_maquina" class="control-label"></label>
                <input asp-for="id_maquina" class="form-control" />
                <span asp-validation-for="id_maquina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data_aquisicao" class="control-label"></label>
                <input asp-for="data_aquisicao" class="form-control" />
                <span asp-validation-for="data_aquisicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="preco_unitario" class="control-label"></label>
                <input asp-for="preco_unitario" class="form-control" />
                <span asp-validation-for="preco_unitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="observacoes" class="control-label"></label>
                <input asp-for="observacoes" class="form-control" />
                <span asp-validation-for="observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
